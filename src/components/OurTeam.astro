<div class="about-us mb-20 md:mb-52">
	<div
		class="about-us__content max-md:mx-0 content gridded relative gap-y-8 md:gap-y-12"
	>
		<Image
			id="hand"
			class="absolute top-0 md:top-16 right-[1.875rem] md:right-[16.9rem] w-14 md:w-[4.31rem]"
			src={Hand}
			alt=""
		/>
		<h2
			class="text-2xl/7 font-everett font-medium col-span-full md:col-span-2 md:text-right max-md:mx-[1.875rem]"
		
			set:html={(t('ourteam.title'))} /> 
		<div
			class="col-span-full md:col-span-4 relative max-md:mx-[1.875rem] overflow-hidden"
		>
			<Image src={Play} alt="" />
