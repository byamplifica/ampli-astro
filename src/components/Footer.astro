---
import { Image } from 'astro:assets';
import Interact from '../assets/images/interact.png';
import GPTW from '../assets/images/gptw.png';
import Wep from '../assets/images/wep.png';
import { ui } from '../i18n/ui';
import { getLangFromUrl, useTranslations, useTranslatedPath } from '../i18n/utils';


const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang, ui);
const translatePath = useTranslatedPath(lang);
---

<footer
	id="footer"
	class="footer py-20 md:py-[9.4rem] bg-foreground text-white"
>
	<div class="content gridded gap-y-24 md:gap-y-8">
		<div class="col-span-full md:col-span-3">
			<div class="flex gap-x-[2.38rem] font-everett font-medium text-3xl mb-6">
				<span class="w-24">BA</span>
			</div>
			<div class="text-xl">
				<p>Chile 576 1A, Buenos Aires, Argentina</p>
				<p><a href="tel:+541153521616">+54 11 5352 1616</a></p>
			</div>
		</div>
		<div class="col-span-full md:col-span-3">
			<nav class="footer__nav">
				<ul>
					<li>
						<a href={translatePath('/#brands')}>{t('nav.brands')}</a>
					</li>
					<li>
						<a href={translatePath('/#capabilities')}>{t('nav.capabilities')}</a>
					</li>
					<li>
						<a href={translatePath('/#verticals')}>{t('nav.verticals')}</a>
					</li>
					<li>
						<a href={translatePath('/contact')}>{t('nav.contact')}</a>
					</li>
				</ul>
			</nav>
		</div>
		<div class="col-span-full md:col-span-3">
			<nav class="footer__nav">
				<ul>
					<li><a href="https://instagram.com/byamplifica" target="_blank">Instagram</a></li>
					<li>
						<a href="https://linkedin.com/company/amplifica/" target="_blank">LinkedIn</a>
					</li>
				</ul>
			</nav>
		</div>
		<div
			class="col-span-full md:col-span-3 flex items-center gap-x-10 self-start"
		>
			<Image class="w-[4.8rem]" src={Interact} alt="" />
			<Image class="w-[8.4rem]" src={Wep} alt="" />
			<Image class="w-14" src={GPTW} alt="" />
		</div>
		<div class="col-span-full md:col-span-3 md:col-start-10">
			<nav class="footer__nav--tyc">
				<ul>
					<li><a href={translatePath('/terms-of-use')}>{t('nav.tyc')}</a></li>
					<li><a href={translatePath('/privacy-policy')}>{t('nav.pp')}</a></li>
					<li><a href={translatePath('/quality-policy')}>{t('nav.qp')}</a></li>
				</ul>
			</nav>
		</div>
	</div>
</footer>

<style>
	.footer {
		.footer__nav {
			@apply text-xl;
			li {
				@apply mb-4 md:mb-3 last:mb-0;
			}
		}
		.footer__nav--tyc ul {
			@apply flex gap-x-10;
			li {
				@apply text-sm;
			}
		}
	}
</style>
